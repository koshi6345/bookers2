<% if @range == "User" %>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
      <td><%= user.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
      <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>