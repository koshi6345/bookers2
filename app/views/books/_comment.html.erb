<% book.book_comments.each do |book_comment| %>
  <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
  <%= book_comment.user.name %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
    <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), remote: true, method: :delete %>
  <% end %>
<% end %>
<%= form_with(model:[book, book_comment]) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントここに" %>
  <%= f.submit "送信する" %>
<% end %>